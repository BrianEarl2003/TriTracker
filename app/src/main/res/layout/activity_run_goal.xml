<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_runDistance3"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Distance (miles)"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/ib_runHome3"
        app:layout_constraintEnd_toStartOf="@+id/ib_runHome3"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_runTime3"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint=" Time (00:00)"
        android:inputType="time"
        app:layout_constraintBottom_toTopOf="@+id/et_runDistance3"
        app:layout_constraintEnd_toStartOf="@+id/ib_runHome3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_addRunGoal"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="ADD GOAL"
        app:backgroundTint="#777272"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/ib_runHome3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_runHome3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tri" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/runChart"
        android:layout_width="411dp"
        android:layout_height="627dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_runHome3" />

</androidx.constraintlayout.widget.ConstraintLayout>